  width: 380rpx;
  height: 313rpx;
  margin-top: 100rpx;

}
.no-data-text{
  font-size: 26rpx;
  color: #cccccc;
  margin-top: 47rpx;
  margin-bottom: 66rpx;
}
.add-btn{
    width: 340rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    text-align: center;
    letter-spacing: 1rpx;
    color: #fffefe;
    background-color: #f8d300;
    border-radius: 20rpx;
}

.home-list-wrapper{
  padding: 30rpx;
}

.list-wrapper{
  display: flex;
  overflow: hidden;
  background-color: #fff;
}
.list-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2C2C2C;
}
.list-item{
  width: 100%;
  margin-left: -168rpx;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgb(240, 240, 240);
  transform: translateX(168rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(168rpx);
}
.list-item-left{
  width: 100%;
  margin-left: -140rpx;
  transform: translateX(140rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(140rpx);
}
.delete{
  height: 155rpx;
  width: 140rpx;
  background-color: rgb(241, 81, 81);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
  /* 关键代码 start */
  transform: translateX(168rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(168rpx);
}
.list-date {
  font-size: 24rpx;
  font-weight: 400;
  color: #CCCCCC;
  position: absolute;
  right: 30rpx;
  text-align: right;
}
.list-content {
  margin-top: 50rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #CCCCCC;
}
.hoem_edit_icon{
  width: 108rpx;
  height: 108rpx;
  position: absolute;
  right: 20rpx;
  bottom: 150rpx;
}
.touch-move-active .list-item,
.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}